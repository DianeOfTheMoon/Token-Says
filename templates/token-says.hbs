<form class="flexcol token-says" autocomplete="off">

    <!-- Navigation Tabs -->
    <nav class="sheet-tabs tabs" data-group="sections">
        <a class="item" data-tab="rollableTable"><i class="fas fa-th-list"></i>&nbsp;{{localize 'TOKENSAYS.setting.rollableTableRules'}}</a>
        <a class="item" data-tab="audio"><i class="fas fa-music"></i>&nbsp;{{localize 'TOKENSAYS.setting.audioFileRules'}}</a>
    </nav>

    <!-- Main Content Section -->
    <section id="config-tabs" class="content">
        <div class="tab" data-tab="rollableTable" data-group="sections">
            <div class="rules-list">
                <ol class="rules-list">
                    <li class="rules-header flexrow">
                        <div class="rule-name">{{localize 'TOKENSAYS.setting.subheader.name'}}</div>

                        <div class="rule-name rule-active">
                            {{localize 'TOKENSAYS.setting.subheader.isActive'}}
                        </div>
    
                        <div class="rule-controls">
                            <a class="rule-control rolltable-rule-create" title="{{localize 'TOKENSAYS.addRull'}}" data-type="rule" data-action="create-rolltable">
                                <i class="fas fa-plus"></i> {{localize 'TOKENSAYS.add'}}
                            </a>
                        </div>
                    </li>
    
                    <ol class="rule-list">
                        {{#each tokenSaysRollTable}}
                        <li class="rule flexrow " data-id="{{id}}" data-container="rules" draggable="true">
                            <div class="rule-name">
                                <h4 style="white-space: normal;">{{label}}</h4>
                            </div>
    
                            <div class="rule-name rule-active">
                                <input type="checkbox" name="{{id}}.isActive" class="rule-active" data-dtype="Boolean" {{checked this.isActive}} />
                            </div>
    
                            <div class="rule-controls">
                                <a class="rule-control rule-edit" title="{{localize 'TOKENSAYS.editRule'}}" data-action="edit"><i class="fas fa-edit"></i></a>&nbsp;&nbsp;
                                <a class="rule-control rule-delete" title="{{localize 'TOKENSAYS.deleteRule'}}" data-action="delete"><i class="fas fa-trash"></i></a>
                            </div>
                        </li>
                        {{/each}}
                    </ol>
                </ol>
            </div>
        </div>
        <div class="tab" data-tab="audio" data-group="sections">
            <div class="rules-list">
                <ol class="rules-list">
                    <li class="rules-header flexrow">
                        <div class="rule-name">{{localize 'TOKENSAYS.setting.subheader.name'}}</div>
    
                        <div class="rule-name rule-active">
                            {{localize 'TOKENSAYS.setting.subheader.isActive'}}
                        </div>
    
                        <div class="rule-controls">
                            <a class="rule-control audio-rule-create" title="{{localize 'TOKENSAYS.addRull'}}" data-type="rule" data-action="create-audio">
                                <i class="fas fa-plus"></i> {{localize 'TOKENSAYS.add'}}
                            </a>
                        </div>
                    </li>
    
                    <ol class="rule-list">
                        {{#each tokenSaysAudio}}
                        <li class="rule flexrow " data-id="{{id}}" data-container="rules" draggable="true">
                            <div class="rule-name">
                                <h4 style="white-space: normal;">{{label}}</h4>
                            </div>
    
                            <div class="rule-name rule-active">
                                <input type="checkbox" name="{{id}}.isActive" class="rule-active" data-dtype="Boolean" {{checked this.isActive}} />
                            </div>
    
                            <div class="rule-controls">
                                <a class="rule-control rule-edit" title="{{localize 'TOKENSAYS.editRule'}}" data-action="edit"><i class="fas fa-edit"></i></a>&nbsp;&nbsp;
                                <a class="rule-control rule-delete" title="{{localize 'TOKENSAYS.deleteRule'}}" data-action="delete"><i class="fas fa-trash"></i></a>
                            </div>
                        </li>
                        {{/each}}
                    </ol>
                </ol>
            </div>
        </div>
    </section>
</form>